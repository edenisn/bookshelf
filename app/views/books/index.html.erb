<h2><%= current_user.cached_books_count %> book(s) revised</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>ISBN</th>
      <th><th>
    </tr>
  </thead>

  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.isbn %></td>
        <% if book.reserved %>
          <td><%= link_to 'Cancel reservation', cancel_reservation_path(book) %></td>
        <% end %>
      </tr>
    </tbody>
  <% end %>
</table>
